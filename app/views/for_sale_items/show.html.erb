<div>
  <% @for_sale_item.images.each do |image| %>
    <div>
      <% if image.representable? %>
        <%= image_tag image.representation(resize_to_limit: [300, 300]) %>
      <% else %>
        <%= link_to rails_blob_path(image, disposition: "attachment") do %>
          <%= image_tag "", alt: "Download file" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Edit this for sale item", edit_for_sale_item_path(@for_sale_item) %> |
  <%= link_to "Back to for sale items", for_sale_items_path %>

  <%= button_to "Destroy this for sale item", @for_sale_item, method: :delete %>
</div>
